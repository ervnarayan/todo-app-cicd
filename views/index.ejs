<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Todo APP | Home</title>
        <link rel="icon" href="/images/favicon.png" />
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/main.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="#"><img src="/images/todo.png" alt="Todo" /> TodoList</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                </ul>
                <form class="d-flex">
                  <input class="form-control me-sm-2" type="search" placeholder="Search">
                  <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
              </div>
            </div>
        </nav>
        <div class="container">
            <div class="row taskList">
                <% todolist.forEach(function(todo, index) { %>
                <div class="alert alert-dismissible alert-info">
                    <span><%- index %>. </span>  <strong><%- todo %></strong> &nbsp; <a href="/<%= index %>" class="alert-link">✎</a>
                    <a href="/delete/<%= index %>" class="del-btn">✘</a>
    
                </div>         
                <% }); %>                                             
            </div>
        </div>
        <div class="form-group addTask">
            <label class="form-label mt-4">Add Task</label>
            <div class="form-group">
                <form action="/add/" method="post">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                          </svg></span>
                        <input type="text" class="form-control" name="newtodo" id="newtodo" placeholder="What should I do?" aria-label="What should I do?" aria-describedby="button-addon2">
                        <input class="btn btn-dark" type="submit" id="button-addon2" type="submit" value="Submit" />
                    </div>
                </form>                    
            </div>
          </div>
    </body>
</html>
